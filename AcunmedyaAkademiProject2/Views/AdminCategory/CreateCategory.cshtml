@model AcunmedyaAkademiProject2.Entities.Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Yeni Kategori Ekleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CreateCategory", "AdminCategory", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="CategoryName">Kategori Adı</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adı giriniz..." })
                            </div>

                            <button type="submit" class="btn btn-success">Kategori Ekle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

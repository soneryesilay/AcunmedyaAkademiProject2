@model AcunmedyaAkademiProject2.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Kategori Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.CategoryId)

                            <div class="form-group">
                                <label>Kategori Adı</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

@model List<AcunmedyaAkademiProject2.Entities.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Kategori Listesi</strong>
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("CreateCategory", "AdminCategory")" class="btn btn-success mb-3">
                            <i class="fa fa-plus"></i> Yeni Kategori Ekle
                        </a>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <th scope="row">@item.CategoryId</th>
                                        <td>@item.CategoryName</td>

                                        <td>
                                            <a href="@Url.Action("UpdateCategory", "AdminCategory", new { id = item.CategoryId })"
                                               class="btn btn-warning btn-sm">
                                                <i class="fa fa-edit"></i> Güncelle
                                            </a>
                                            <a href="@Url.Action("DeleteCategory", "AdminCategory", new { id = item.CategoryId })"
                                               class="btn btn-danger btn-sm" onclick="return confirm('Bu Kategoriyi silmek istediğinize emin misiniz?');">
                                                <i class="fa fa-trash"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                </div>
            </div>




        </div>
    </div><!-- .animated -->
</div>




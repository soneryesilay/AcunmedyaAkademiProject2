@model AcunmedyaAkademiProject2.Entities.Testimonial
@{
    ViewBag.Title = "Yeni Referans Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Yeni Referans Ekle</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CreateTestimonial", "AdminTestimonial", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="Name">Referans Adı</label>
                                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Referans adı giriniz..." })
                            </div>

                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                @Html.TextAreaFor(x => x.CommentDetail, new { @class = "form-control", rows = 4, placeholder = "Referans açıklaması giriniz..." })
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">Görsel URL</label>
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "Görselin URL'sini giriniz..." })
                            </div>

                            <button type="submit" class="btn btn-success">Referans Ekle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

@model AcunmedyaAkademiProject2.Entities.Reservation

@{
    Layout = null;
}

@Html.Action("PartialHead", "Default")

<body>
    @Html.Action("PartialNavbar", "Default")

    <div class="reservation_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="reservation_title" style="font-size: 2.5rem;">Yeni Rezervasyon Oluştur</h2>
                    <p class="reservation_description" style="font-size: 1.2rem;">
                        Aşağıdaki formu doldurarak yeni bir rezervasyon oluşturabilirsiniz.
                    </p>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center" style="font-size: 1rem;">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center" style="font-size: 1rem;">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form action="@Url.Action("CreateReservation", "Reservation")" method="post">
                        <div class="form-group">
                            <label for="CustomerName" style="font-size: 1.1rem;">Adınız Soyadınız</label>
                            <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Adınızı ve soyadınızı girin" required style="font-size: 1rem; width: 100%;" />
                        </div>

                        <div class="form-group">
                            <label for="CustomerEmail" style="font-size: 1.1rem;">E-Posta Adresiniz</label>
                            <input type="email" class="form-control" id="CustomerEmail" name="CustomerEmail" placeholder="E-posta adresinizi girin" required style="font-size: 1rem; width: 100%;" />
                        </div>

                        <div class="form-group">
                            <label for="CustomerPhone" style="font-size: 1.1rem;">Telefon Numaranız</label>
                            <input type="tel" class="form-control" id="CustomerPhone" name="CustomerPhone" placeholder="Telefon numaranızı girin" required style="font-size: 1rem; width: 100%;" />
                        </div>

                        <div class="form-group">
                            <label for="NumberOfPerson" style="font-size: 1.1rem;">Kişi Sayısı</label>
                            <input type="number" class="form-control" id="NumberOfPerson" name="NumberOfPerson" placeholder="Kaç kişisiniz?" required style="font-size: 1rem; width: 100%;" />
                        </div>

                        <div class="form-group">
                            <label for="ReservationDate" style="font-size: 1.1rem;">Rezervasyon Tarihi</label>
                            <input type="datetime-local" class="form-control" id="ReservationDate" name="ReservationDate" required style="font-size: 1rem; width: 100%;" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block" style="font-size: 1.1rem;">Rezervasyon Oluştur</button>
                    </form>
                </div>

                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <div class="about_img text-center w-100">
                        <img src="/Romyk-1.0.0/images/about-img.png" alt="Rezervasyon Görseli" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Action("PartialScript", "Default")

    <style>
        /* Rezervasyon formu ve içerikleri için daha iyi hizalama */
        .reservation_section {
            padding: 50px 0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        /* Genişlik ayarlamaları ve hizalamalar */
        .container {
            max-width: 1200px;
        }

        .col-md-6 {
            margin-top: 20px;
        }

        /* Görselin hizalanması */
        .about_img img {
            max-width: 100%;
            height: auto;
        }

        /* Dikey merkezleme */
        .d-flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</body>
@model AcunmedyaAkademiProject2.Entities.Slider
@{
    ViewBag.Title = "Yeni Slider Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Yeni Slider Ekle</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CreateSlider", "AdminSlider", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="Title">Slider Başlığı</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Slider başlığını giriniz..." })
                            </div>

                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 4, placeholder = "Slider açıklamasını giriniz..." })
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">Görsel URL</label>
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "Slider görselinin URL’sini giriniz..." })
                            </div>

                            <button type="submit" class="btn btn-success">Slider Ekle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

@model AcunmedyaAkademiProject2.Entities.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Ürün Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateProduct", "AdminProduct", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.ProductId)

                            <div class="form-group">
                                <label>Ürün Adı</label>
                                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Ürün Fiyat</label>
                                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Görsel URL</label>
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Ürün Açıklaması</label>
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Ürün Kategorisi</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Ürün Güncelle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>

@model List<AcunmedyaAkademiProject2.Entities.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Ürün Listesi</strong>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <th scope="row">@item.ProductId</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td><a href="/AdminProduct/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/AdminProduct/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <td><a href="/AdminProduct/CreateProduct" class="btn btn-primary">Yeni Ürün Girişi</a></td>

                    </div>
                </div>
            </div>




        </div>
    </div><!-- .animated -->
</div>


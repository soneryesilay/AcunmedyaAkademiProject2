@model AcunmedyaAkademiProject2.Entities.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Hakkımızda Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateAbout", "AdminAbout", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.AboutId)

                            <div class="form-group">
                                <label>Hakkımızda Başlığı</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            </div>

                          

                            <div class="form-group">
                                <label>Görsel Url'i</label>
                                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Hakkımızda Açıklaması</label>
                                @Html.TextBoxFor(x => x.Decsription, new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>


